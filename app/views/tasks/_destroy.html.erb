
<button id="<%= dom_id task, :destroy %>" class="block" type="button">Delete</button>

<div id="popup-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed z-50 flex mx-auto justify-center items-center w-full md:inset-0">
  <div id="popup-box" tabindex="-1" class="relative p-4">
    <div class="relative bg-white rounded-lg shadow">
      <div class="p-4 md:p-5 my-auto text-center">
        <svg class="mx-auto mb-4 text-red-400 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
        </svg>
        <h1 class="mb-5 text-lg font-normal text-red-500">Are you sure you want to delete this task?</h1>
        <button id="cancel-task-delete" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-red-600 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-red-700 focus:z-10 focus:ring-4 focus:ring-gray-100">No, cancel</button>
        <%= form_for(session_url(task), method: :delete, class: "inline") do %>
          <%= button_tag("Yes, I'm sure", class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center") %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelector('#<%= dom_id task, :destroy %>').addEventListener('click', function() {
    const popupModal = document.querySelector('#popup-modal');
    popupModal.classList.toggle('hidden');
    const popupBox = document.querySelector('#popup-box');
    popupBox.focus();

    popupBox.addEventListener('focusout', function() {
      popupModal.classList.add('hidden');
    });
  });

  document.querySelector('#cancel-task-delete').addEventListener('click', function() {
    const popupModal = document.querySelector('#popup-modal');
    popupModal.classList.add('hidden');
  });
</script>